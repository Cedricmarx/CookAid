<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/recipe_item">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_image" />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/recipe_image"
            android:text="Canada"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipe_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipe_name"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/recipe_image"
            android:text="Beginner"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recipe_recipe"
            android:layout_width="202dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/recipe_image"
            android:text="This is content for content and content of content"
            android:textColor="#000"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
